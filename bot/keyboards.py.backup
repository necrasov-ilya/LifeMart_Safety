def format_debug_card(
    spam_id: int,
    user_name: str,
    user_id: int,
    text: str,
    msg_link: str,
    analysis: AnalysisResult,
    action: Action,
    chat_id: int,
    message_id: int
) -> str:
    """Ğ”ĞµÑ‚Ğ°Ğ»ÑŒĞ½Ğ°Ñ ĞºĞ°Ñ€Ñ‚Ğ¾Ñ‡ĞºĞ° Ñ Ñ‚ĞµÑ…Ğ½Ğ¸Ñ‡ĞµÑĞºĞ¾Ğ¹ Ğ¸Ğ½Ñ„Ğ¾Ñ€Ğ¼Ğ°Ñ†Ğ¸ĞµĞ¹"""
    preview = html.escape(text[:200] + ("â€¦" if len(text) > 200 else ""))
    
    keyword = analysis.keyword_result
    tfidf = analysis.tfidf_result
    embedding = analysis.embedding_result
    
    # Ğ¡Ñ‚Ğ°Ñ‚ÑƒÑ Ğ´ĞµĞ¹ÑÑ‚Ğ²Ğ¸Ñ
    if action == Action.KICK:
        action_text = "ğŸš« <b>KICK</b> (Ğ·Ğ°Ğ±Ğ°Ğ½ĞµĞ½ Ğ°Ğ²Ñ‚Ğ¾Ğ¼Ğ°Ñ‚Ğ¸Ñ‡ĞµÑĞºĞ¸)"
    elif action == Action.DELETE:
        action_text = "ğŸ—‘ï¸ <b>DELETE</b> (ÑƒĞ´Ğ°Ğ»ĞµĞ½ Ğ°Ğ²Ñ‚Ğ¾Ğ¼Ğ°Ñ‚Ğ¸Ñ‡ĞµÑĞºĞ¸)"
    elif action == Action.NOTIFY:
        action_text = "âš ï¸ <b>NOTIFY</b> (Ğ¾Ğ¶Ğ¸Ğ´Ğ°ĞµÑ‚ Ñ€ĞµÑˆĞµĞ½Ğ¸Ñ)"
    else:
        action_text = "âœ… <b>APPROVE</b> (Ğ¿Ñ€Ğ¾Ğ¿ÑƒÑ‰ĞµĞ½)"
    
    card = (
        f"ï¿½ <b>Debug: ĞŸĞ¾Ğ´Ğ¾Ğ·Ñ€Ğ¸Ñ‚ĞµĞ»ÑŒĞ½Ğ¾Ğµ ÑĞ¾Ğ¾Ğ±Ñ‰ĞµĞ½Ğ¸Ğµ â„–{spam_id}</b>\n\n"
        f"ğŸ‘¤ <b>ĞŸĞ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ñ‚ĞµĞ»ÑŒ:</b> {html.escape(user_name)}\n"
        f"ğŸ†” <b>User ID:</b> <code>{user_id}</code>\n"
        f"ï¿½ <b>Chat ID:</b> <code>{chat_id}</code>\n"
        f"ğŸ“¨ <b>Message ID:</b> <code>{message_id}</code>\n"
        f"ï¿½ğŸ”— <a href='{msg_link}'>ĞŸĞµÑ€ĞµĞ¹Ñ‚Ğ¸ Ğº ÑĞ¾Ğ¾Ğ±Ñ‰ĞµĞ½Ğ¸Ñ</a>\n\n"
        f"â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n"
        f"<b>ğŸ“Š ĞĞĞĞ›Ğ˜Ğ— Ğ¤Ğ˜Ğ›Ğ¬Ğ¢Ğ ĞĞ’</b>\n"
        f"â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n\n"
    )
    
    # Embedding filter
    has_embedding = (embedding and 
                    embedding.details and 
                    embedding.details.get("embedding") is not None)
    
    if has_embedding:
        card += f"ğŸ§  <b>Embedding Filter</b>\n"
        card += f"   â”” Score: <b>{embedding.score:.2%}</b> (confidence: {embedding.confidence:.0%})\n"
        
        # Ğ¡Ñ‚Ğ°Ñ‚ÑƒÑ Ğ¸ Ñ€Ğ°Ğ·Ğ¼ĞµÑ€ ÑĞ¼Ğ±ĞµĞ´Ğ´Ğ¸Ğ½Ğ³Ğ°
        status = embedding.details.get("status", "ok")
        emb_vec = embedding.details.get("embedding")
        if emb_vec:
            card += f"   â”” Ğ’ĞµĞºÑ‚Ğ¾Ñ€: {len(emb_vec)} Ğ¸Ğ·Ğ¼ĞµÑ€ĞµĞ½Ğ¸Ğ¹\n"
        if status and status != "ok":
            card += f"   â”” Ğ¡Ñ‚Ğ°Ñ‚ÑƒÑ: <code>{html.escape(status)}</code>\n"
    else:
        card += f"ğŸ§  <b>Embedding Filter</b>: <i>Ğ½ĞµĞ´Ğ¾ÑÑ‚ÑƒĞ¿ĞµĞ½</i>\n"
    
    card += "\n"
    
    # Keyword filter
    card += f"ğŸ”¤ <b>Keyword Filter</b> (Ğ²ĞµÑ: 20%)\n"
    card += f"   â”” Score: <b>{keyword.score:.2%}</b> (confidence: {keyword.confidence:.0%})\n"
    if keyword.details:
        if keyword.details.get("matched_keywords"):
            keywords = ", ".join(keyword.details["matched_keywords"])
            card += f"   â”” ĞĞ°Ğ¹Ğ´ĞµĞ½Ğ¾: <code>{keywords}</code>\n"
        if keyword.details.get("matched_patterns"):
            patterns = ", ".join(keyword.details["matched_patterns"])
            card += f"   â”” ĞŸĞ°Ñ‚Ñ‚ĞµÑ€Ğ½Ñ‹: <code>{patterns}</code>\n"
    
    card += "\n"
    
    # TF-IDF filter
    card += f"ï¿½ <b>TF-IDF Filter</b> (Ğ²ĞµÑ: 30%)\n"
    card += f"   â”” Score: <b>{tfidf.score:.2%}</b> (confidence: {tfidf.confidence:.0%})\n"
    if tfidf.details and tfidf.details.get("class_probabilities"):
        probs = tfidf.details["class_probabilities"]
        card += f"   â”” P(spam): {probs[1]:.3f}, P(ham): {probs[0]:.3f}\n"
    
    card += (
        f"\nâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n"
        f"<b>ğŸ¯ Ğ˜Ğ¢ĞĞ“ĞĞ’ĞĞ¯ ĞĞ¦Ğ•ĞĞšĞ</b>\n"
        f"â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n\n"
    )
    
    # NEW: ĞœĞµÑ‚Ğ°-ĞºĞ»Ğ°ÑÑĞ¸Ñ„Ğ¸ĞºĞ°Ñ‚Ğ¾Ñ€ (ĞµÑĞ»Ğ¸ Ğ´Ğ¾ÑÑ‚ÑƒĞ¿ĞµĞ½)
    if analysis.meta_proba is not None:
        card += f"ğŸ¯ <b>MetaClassifier:</b> <b>{analysis.meta_proba:.2%}</b>\n"
        
        if analysis.meta_debug:
            # Similarity scores
            sim_spam = analysis.meta_debug.get('sim_spam')
            sim_ham = analysis.meta_debug.get('sim_ham')
            sim_diff = analysis.meta_debug.get('sim_diff')
            
            if sim_spam is not None:
                card += f"   â”” Sim(spam): {sim_spam:.3f}, Sim(ham): {sim_ham:.3f}, Diff: {sim_diff:.3f}\n"
            
            # ĞŸĞ°Ñ‚Ñ‚ĞµÑ€Ğ½Ñ‹
            patterns = analysis.meta_debug.get('patterns', {})
            fired_patterns = [k.replace('has_', '') for k, v in patterns.items() 
                            if k.startswith('has_') and v]
            if fired_patterns:
                card += f"   â”” ĞŸĞ°Ñ‚Ñ‚ĞµÑ€Ğ½Ñ‹: <code>{', '.join(fired_patterns)}</code>\n"
            
            if 'obfuscation_ratio' in patterns and patterns['obfuscation_ratio'] > 0:
                card += f"   â”” ĞĞ±Ñ„ÑƒÑĞºĞ°Ñ†Ğ¸Ñ: {patterns['obfuscation_ratio']:.1%}\n"
        
        card += "\n"
    
    card += (
        f"ğŸ“Š Average Score (legacy): <b>{analysis.average_score:.2%}</b>\n"
        f"ğŸ“Š Max Score: <b>{analysis.max_score:.2%}</b>\n"
        f"ğŸ“Š All Filters High: <b>{'Ğ”Ğ°' if analysis.all_high else 'ĞĞµÑ‚'}</b>\n\n"
        f"ğŸ¤– <b>Ğ”ĞµĞ¹ÑÑ‚Ğ²Ğ¸Ğµ:</b> {action_text}\n\n"
        f"â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n"
        f"<b>ğŸ’¬ Ğ¢Ğ•ĞšĞ¡Ğ¢ Ğ¡ĞĞĞ‘Ğ©Ğ•ĞĞ˜Ğ¯</b>\n"
        f"â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n\n"
        f"{preview}"
    )
    
    return card


def format_notification_card(
    spam_id: int,
    user_name: str,
    user_id: int,
    text: str,
    msg_link: str,
    analysis: AnalysisResult,
    action: Action,
    chat_id: int,
    message_id: int
) -> str:
    """
    Ğ¤Ğ¾Ñ€Ğ¼Ğ°Ñ‚Ğ¸Ñ€ÑƒĞµÑ‚ ĞºĞ°Ñ€Ñ‚Ğ¾Ñ‡ĞºÑƒ Ğ´Ğ»Ñ ÑƒĞ²ĞµĞ´Ğ¾Ğ¼Ğ»ĞµĞ½Ğ¸Ñ Ğ¼Ğ¾Ğ´ĞµÑ€Ğ°Ñ‚Ğ¾Ñ€Ğ°.
    Ğ’Ñ‹Ğ±Ğ¸Ñ€Ğ°ĞµÑ‚ Ğ¼ĞµĞ¶Ğ´Ñƒ Ğ¿Ñ€Ğ¾ÑÑ‚Ñ‹Ğ¼ Ğ¸ Ğ´ĞµÑ‚Ğ°Ğ»ÑŒĞ½Ñ‹Ğ¼ Ñ„Ğ¾Ñ€Ğ¼Ğ°Ñ‚Ğ¾Ğ¼ Ğ² Ğ·Ğ°Ğ²Ğ¸ÑĞ¸Ğ¼Ğ¾ÑÑ‚Ğ¸ Ğ¾Ñ‚ DETAILED_DEBUG_INFO.
    """
    if settings.DETAILED_DEBUG_INFO:
        # ĞŸĞ¾ĞºĞ°Ğ·Ñ‹Ğ²Ğ°ĞµĞ¼ Ğ¿Ğ¾Ğ»Ğ½ÑƒÑ Ñ‚ĞµÑ…Ğ½Ğ¸Ñ‡ĞµÑĞºÑƒÑ Ğ¸Ğ½Ñ„Ğ¾Ñ€Ğ¼Ğ°Ñ†Ğ¸Ñ Ğ¿Ğ¾ ÑƒĞ¼Ğ¾Ğ»Ñ‡Ğ°Ğ½Ğ¸Ñ
        return format_debug_card(
            spam_id=spam_id,
            user_name=user_name,
            user_id=user_id,
            text=text,
            msg_link=msg_link,
            analysis=analysis,
            action=action,
            chat_id=chat_id,
            message_id=message_id
        )
    else:
        # ĞŸĞ¾ĞºĞ°Ğ·Ñ‹Ğ²Ğ°ĞµĞ¼ ÑƒĞ¿Ñ€Ğ¾Ñ‰ĞµĞ½Ğ½ÑƒÑ Ğ²ĞµÑ€ÑĞ¸Ñ
        return format_simple_card(
            spam_id=spam_id,
            user_name=user_name,
            text=text,
            msg_link=msg_link,
            analysis=analysis,
            action=action
        )
