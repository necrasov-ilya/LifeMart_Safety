###############################################################################
# Telegram-бот
###############################################################################
BOT_TOKEN=                              # ← токен BotFather
MODERATOR_CHAT_ID=                      # ← ID модераторского чата

###############################################################################
# Контроль доступа
###############################################################################
WHITELIST_USER_IDS=                     # ← юзер-ID, через запятую

###############################################################################
# Mistral API и Ollama (для семантического анализа)
###############################################################################
MISTRAL_API_KEY=                        # ← API ключ Mistral AI
EMBEDDING_MODE=ollama                      # ← api / ollama / local / disabled

# Ollama настройки (если EMBEDDING_MODE=ollama)
EMBEDDING_MODEL_ID=qllama/multilingual-e5-small  # ← ID модели для эмбеддингов
OLLAMA_MODEL=qllama/multilingual-e5-small        # ← модель Ollama (fallback to EMBEDDING_MODEL_ID)
OLLAMA_BASE_URL=http://localhost:11434  # ← URL Ollama сервера

###############################################################################
# Настройки политики модерации
###############################################################################
POLICY_MODE=semi-auto                   # ← manual / semi-auto / auto
AUTO_DELETE_THRESHOLD=0.85              # ← порог для автоудаления (0.0-1.0)
AUTO_KICK_THRESHOLD=0.95                # ← порог для автобана (0.0-1.0)
NOTIFY_THRESHOLD=0.5                    # ← порог для отправки модератору (0.0-1.0)
ANNOUNCE_BLOCKS=True                    # ← публиковать уведомления в чате

###############################################################################
# Пороги фильтров
###############################################################################
KEYWORD_THRESHOLD=0.7                   # ← порог для KeywordFilter
TFIDF_THRESHOLD=0.6                     # ← порог для TfidfFilter
EMBEDDING_THRESHOLD=0.7                 # ← порог для EmbeddingFilter

###############################################################################
# Мета-классификатор (логистическая регрессия)
###############################################################################
USE_META_CLASSIFIER=True                # ← включить мета-классификатор (true/false)
META_THRESHOLD_HIGH=0.85                # ← порог для auto delete/ban (0.0-1.0)
META_THRESHOLD_MEDIUM=0.65              # ← порог для отправки модератору (0.0-1.0)

###############################################################################
# Обучение модели
###############################################################################
RETRAIN_THRESHOLD=100                   # ← кол-во новых меток для автообучения

###############################################################################
# Логирование
###############################################################################
LOG_LEVEL=INFO                          # ← DEBUG / INFO / WARNING / ERROR
